#include <stdio.h>
#include <string.h>
#include <ctype.h>


const int TAM_MAX = 100;

int main(){

    char s[TAM_MAX], st[TAM_MAX];
    printf("Digite uma frase: ");
    fgets(s, TAM_MAX, stdin);
    int j = 0;
    int espacos = 0;
    for(int i = 0; s[i] != '\0'; i++){
        if(s[i] == ' ' && espacos == 0){
            s[j] = s[i];
            j++;
            espacos++;
        }
        else if(s[i] != ' '){
            s[j] = s[i];
            j++;
            espacos = 0;
        }
        
    }
    st[j] = '\0';
    printf("String sem os espa√ßos superfluos: %s", s);
}
